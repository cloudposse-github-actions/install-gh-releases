{
  "name": "install-gh-releases",
  "version": "0.1.0",
  "private": true,
  "description": "Install a GitHub releases binary in a GitHub Actions build environment",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "lint:check": "eslint src/**/*.ts",
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "test": "jest",
    "format-check": "prettier --check '**/*.ts'",
    "all": "npm run build && npm run format && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaxxstorm/action-install-gh-release.git"
  },
  "author": "Lee Briggs",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/plugin-throttling": "^5.0.1",
    "@actions/cache": "^3.2.4",
    "eslint": "^9.2.0",
    "minimist": "^1.2.7",
    "mkdirp-promise": "^5.0.1",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^4.9.4",
    "@vercel/ncc": "^0.36.1",
    "jest": "^27.2.5"
  }
}
