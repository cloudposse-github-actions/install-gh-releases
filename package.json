{
  "name": "install-gh-releases",
  "description": "Install a GitHub releases binary in a GitHub Actions build environment",
  "version": "0.0.0",
  "private": true,
  "main": "lib/main.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "lint:check": "eslint src/**/*.ts",
    "build": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "build:watch": "npm run package -- --watch",
    "test": "npx jest",
    "format-check": "prettier --check '**/*.ts'",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run build"

  },
  "homepage": "https://github.com/cloudposse-github-actions/install-gh-releases",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudposse-github-actions/install-gh-releases.git"
  },
  "bugs": {
    "url": "https://github.com/cloudposse-github-actions/install-gh-releases/issues"
  },
  "author": "Lee Briggs",
  "license": "Apache-2.0",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/plugin-throttling": "^5.0.1",
    "@actions/cache": "^3.2.4",
    "ajv": "^8.17.1",
    "js-yaml": "^4.1.0",
    "eslint": "^9.2.0",
    "minimist": "^1.2.7",
    "mkdirp-promise": "^5.0.1",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.5.4",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.4"
  }
}
